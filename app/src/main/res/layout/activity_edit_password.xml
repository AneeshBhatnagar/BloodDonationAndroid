<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aneesh.blooddonation.EditPassword">

    <TextView
        android:id="@+id/changepass_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your current Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/changepass_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_tv1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/changepass_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_current"
        android:text="Enter your New Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/changepass_new1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_tv2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/changepass_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_new1"
        android:text="Enter your New Password"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/changepass_new2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_tv3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:textSize="18sp" />

    <Button
        android:id="@+id/changepass_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/changepass_new2"
        android:layout_centerHorizontal="true"
        android:text="Change Password" />

</RelativeLayout>

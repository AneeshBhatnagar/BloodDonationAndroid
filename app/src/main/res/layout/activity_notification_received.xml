<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aneesh.blooddonation.NotificationReceived">

    <TextView
        android:id="@+id/notif_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent need of blood with following details"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_bgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_tv1"
        android:layout_marginTop="15dp"
        android:text="Blood Group: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_bgroup"
        android:layout_marginTop="15dp"
        android:text="Contact Number: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_contact"
        android:layout_marginTop="15dp"
        android:text="Location: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/notif_callNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notif_location"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#e50101"
        android:padding="5dp"
        android:text="Call for Support Now!"
        android:textColor="#ffffff" />

</RelativeLayout>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aneesh.blooddonation.UserProfile">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userprofile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Name: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userprofile_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_name"
            android:layout_marginTop="7dp"
            android:text="Password: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userprofile_passwordEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_password"
            android:layout_marginBottom="7dp"
            android:text="(EDIT PASSWORD)"
            android:textColor="#ffff0022"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userprofile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_passwordEdit"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Email Address: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userprofile_bgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_email"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Blood Group: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/userprofile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_bgroup"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Phone: "
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/userprofile_emailpref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_phone"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Send me Email Notifications in case of emergency"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/userprofile_phonepref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_emailpref"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Phone number visible to others"
            android:textSize="19sp" />

        <CheckBox
            android:id="@+id/userprofile_notifgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_phonepref"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Send me notifications for all blood groups"
            android:textSize="19sp" />

        <Button
            android:id="@+id/userprofile_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userprofile_notifgroup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:text="Update Preferences" />

    </RelativeLayout>
</ScrollView>